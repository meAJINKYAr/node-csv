<%- include('../base') %>
<div class="container m-3 p-3">
    <form method="POST" action="/magazines/edit/<%= magazine[0].id %>" class="form">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" value="<%= magazine[0].title %>">
        <label for="isbn">ISBN</label>
        <input type="text" name="isbn" id="isbn" class="form-control" value="<%= magazine[0].isbn %>">
        <label for="authors">Authors</label>
        <input type="text" name="authors" id="authors" class="form-control" value="<%= magazine[0].authors %>">
        <label for="publishedAt">Published At</label>
        <input type="date" name="publishedAt" id="publishedAt" class="form-control" value="<%= magazine[0].publishedAt %>">
        <br>
        <button type="submit" class="btn btn-success">ADD</button>
    </form>
    <br><a href="/magazines"><button class="btn btn-danger">Cancel</button></a>
</div>